<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Dan | Software Developer</title>
    
    <!-- Tailwind CSS via CDN with custom configuration -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        purple: {
                            deep: '#450693',
                            vibrant: '#8C00FF',
                            50: '#F5F3FF',
                            100: '#EDE9FE',
                            900: '#4C1D95',
                        },
                        primary: {
                            DEFAULT: '#8C00FF', 
                            hover: '#7000CC',
                            dark: '#450693',
                        }
                    },
                    fontFamily: {
                        sans: ['Roboto', 'sans-serif'],
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.6s ease-out forwards',
                        'slide-up': 'slideUp 0.6s ease-out forwards',
                        'pop-in': 'popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' },
                        },
                        slideUp: {
                            '0%': { opacity: '0', transform: 'translateY(20px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        },
                        popIn: {
                            '0%': { opacity: '0', transform: 'scale(0.95)' },
                            '100%': { opacity: '1', transform: 'scale(1)' },
                        }
                    }
                }
            }
        }
    </script>

    <!-- Initialize dark mode from localStorage or system preference -->
    <script>
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>

    <!-- External Libraries: Icons and Fonts -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    
    <!-- Site-specific CSS: Tailwind utilities and custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-white dark:bg-slate-950 text-slate-800 dark:text-slate-200 flex flex-col min-h-screen transition-colors duration-300 selection:bg-purple-vibrant selection:text-white antialiased">

    <!-- Navigation Bar -->
    <nav class="sticky top-0 z-40 bg-white/95 dark:bg-slate-950/95 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 transition-all duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-20 items-center">
                <!-- Logo -->
                <a href="@Url.Action("Index", "Home")" class="group flex items-center gap-3 outline-none rounded-lg">
                    <div class="w-10 h-10 bg-purple-vibrant rounded-lg flex items-center justify-center text-white shadow-md group-hover:bg-purple-deep transition-colors duration-300">
                        <span class="font-bold text-xl">D</span>
                    </div>
                    <span class="text-2xl font-bold text-purple-deep dark:text-white tracking-tight group-hover:text-purple-vibrant transition-colors">Dan.Dev</span>
                </a>
                
                <!-- Desktop Navigation Menu -->
                <div class="hidden md:flex items-center space-x-8">
                    <a href="@Url.Action("Index", "Home")" class="nav-link text-slate-600 dark:text-slate-300 hover:text-purple-vibrant dark:hover:text-purple-vibrant font-medium transition-colors">Home</a>
                    <a href="@Url.Action("About", "Home")" class="nav-link text-slate-600 dark:text-slate-300 hover:text-purple-vibrant dark:hover:text-purple-vibrant font-medium transition-colors">About</a>
                    <a href="@Url.Action("Projects", "Home")" class="nav-link text-slate-600 dark:text-slate-300 hover:text-purple-vibrant dark:hover:text-purple-vibrant font-medium transition-colors">Projects</a>
                    
                    <!-- Theme Toggle Button -->
                    <button onclick="toggleTheme()" class="p-2.5 rounded-lg border border-slate-200 dark:border-slate-700 text-slate-500 dark:text-slate-400 hover:border-purple-vibrant dark:hover:border-purple-vibrant hover:text-purple-vibrant transition-all" aria-label="Toggle Dark Mode">
                        <i data-lucide="moon" class="w-5 h-5 hidden dark:block"></i>
                        <i data-lucide="sun" class="w-5 h-5 block dark:hidden"></i>
                    </button>

                    <!-- CTA Button -->
                    <a href="@Url.Action("Contact", "Home")" class="px-6 py-2.5 bg-purple-vibrant text-white rounded-lg font-medium hover:bg-purple-deep transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                        Hire Me
                    </a>
                </div>

                <!-- Mobile Menu Trigger -->
                <div class="flex items-center gap-4 md:hidden">
                    <button onclick="toggleTheme()" class="p-2 text-slate-600 dark:text-slate-300">
                        <i data-lucide="sun" class="w-5 h-5 block dark:hidden"></i>
                        <i data-lucide="moon" class="w-5 h-5 hidden dark:block"></i>
                    </button>
                    <button onclick="toggleMobileMenu()" class="p-2 border border-slate-200 dark:border-slate-700 rounded-lg text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                        <i data-lucide="menu" class="w-6 h-6"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile Dropdown Menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-white dark:bg-slate-900 border-t border-slate-200 dark:border-slate-800 absolute w-full shadow-xl z-30">
            <div class="px-4 pt-4 pb-6 space-y-3">
                <a href="@Url.Action("Index", "Home")" class="block w-full text-left px-4 py-3 text-slate-600 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-800 hover:text-purple-vibrant rounded-lg transition-colors font-medium">Home</a>
                <a href="@Url.Action("About", "Home")" class="block w-full text-left px-4 py-3 text-slate-600 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-800 hover:text-purple-vibrant rounded-lg transition-colors font-medium">About</a>
                <a href="@Url.Action("Projects", "Home")" class="block w-full text-left px-4 py-3 text-slate-600 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-800 hover:text-purple-vibrant rounded-lg transition-colors font-medium">Projects</a>
                <a href="@Url.Action("Contact", "Home")" class="block w-full text-left px-4 py-3 text-white bg-purple-vibrant hover:bg-purple-deep rounded-lg mt-4 font-medium transition-colors shadow-md">Contact Me</a>
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <main class="flex-grow relative overflow-hidden">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-slate-950 text-slate-500 dark:text-slate-400 py-12 mt-auto border-t border-slate-200 dark:border-slate-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-6">
            <div class="flex items-center gap-2">
                <div class="w-8 h-8 bg-purple-vibrant rounded-lg flex items-center justify-center text-white font-bold">D</div>
                <span class="text-xl font-bold text-slate-900 dark:text-white tracking-tight">Dan.Dev</span>
            </div>
            <p class="text-sm">© 2024 Dan Portfolio. All rights reserved.</p>
            <div class="flex gap-6">
                <a href="#" class="hover:text-purple-vibrant transition-colors"><i data-lucide="twitter" class="w-5 h-5"></i></a>
                <a href="#" class="hover:text-purple-vibrant transition-colors"><i data-lucide="linkedin" class="w-5 h-5"></i></a>
                <a href="#" class="hover:text-purple-vibrant transition-colors"><i data-lucide="github" class="w-5 h-5"></i></a>
            </div>
        </div>
    </footer>

    <!-- Universal Modal Component -->
    @await Html.PartialAsync("_Modal")

    <!-- Site JavaScript: interaction handlers and API calls -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Initialize all Lucide icons after DOM is ready
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>