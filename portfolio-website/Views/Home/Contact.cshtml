@{
    ViewData["Title"] = "Contact";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid lg:grid-cols-2 gap-16 items-center">

        <!-- Info -->
        <div class="animate-fade-in">
            <h1 class="text-4xl font-black text-purple-deep dark:text-white mb-6">Get In Touch</h1>
            <p class="text-lg text-slate-600 dark:text-slate-400 mb-8 font-light">
                I'm currently available for freelance projects and full-time opportunities. Drop me a line!
            </p>

            <div class="space-y-6">
                <div class="flex items-center gap-4 p-4 rounded-xl border border-transparent hover:border-slate-200 dark:hover:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors group">
                    <div class="w-12 h-12 bg-purple-50 dark:bg-slate-800 text-purple-vibrant rounded-full flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform">
                        <i data-lucide="mail" class="w-6 h-6"></i>
                    </div>
                    <div>
                        <p class="text-sm text-slate-500 dark:text-slate-400 font-medium">Email Me</p>
                        <a href="mailto:contact@dan.dev" class="text-lg font-bold text-slate-900 dark:text-white hover:text-purple-vibrant transition-colors">contact@dan.dev</a>
                    </div>
                </div>

                <div class="flex items-center gap-4 p-4 rounded-xl border border-transparent hover:border-slate-200 dark:hover:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors group">
                    <div class="w-12 h-12 bg-purple-50 dark:bg-slate-800 text-purple-vibrant rounded-full flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform">
                        <i data-lucide="map-pin" class="w-6 h-6"></i>
                    </div>
                    <div>
                        <p class="text-sm text-slate-500 dark:text-slate-400 font-medium">Location</p>
                        <p class="text-lg font-bold text-slate-900 dark:text-white">San Francisco, CA</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form -->
        <div class="bg-white dark:bg-slate-900 p-8 lg:p-12 rounded-3xl shadow-xl border border-slate-200 dark:border-slate-800 animate-slide-up">
            <form onsubmit="event.preventDefault(); submitForm();">
                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Full Name</label>
                        <input type="text" id="contact-name" class="w-full px-5 py-3 rounded-lg bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 focus:bg-white dark:focus:bg-slate-900 focus:ring-2 focus:ring-purple-vibrant focus:border-purple-vibrant outline-none transition-all dark:text-white" placeholder="John Doe">
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Email Address</label>
                        <input type="email" id="contact-email" class="w-full px-5 py-3 rounded-lg bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 focus:bg-white dark:focus:bg-slate-900 focus:ring-2 focus:ring-purple-vibrant focus:border-purple-vibrant outline-none transition-all dark:text-white" placeholder="john@example.com">
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Message</label>
                        <textarea rows="4" id="contact-msg" class="w-full px-5 py-3 rounded-lg bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 focus:bg-white dark:focus:bg-slate-900 focus:ring-2 focus:ring-purple-vibrant focus:border-purple-vibrant outline-none transition-all dark:text-white" placeholder="Tell me about your project..."></textarea>
                    </div>

                    <button type="submit" class="w-full py-4 bg-purple-vibrant text-white rounded-lg font-bold text-lg shadow-lg hover:bg-purple-deep transition-all duration-300 transform hover:-translate-y-1">
                        Send Message
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>