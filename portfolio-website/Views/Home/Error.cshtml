@{
    ViewData["Title"] = "Error";
    var traceId = ViewBag.TraceIdentifier as string ?? "N/A";
}

<div class="max-w-3xl mx-auto px-4 py-16">
    <div class="bg-white dark:bg-slate-900 p-8 rounded-2xl shadow-xl border border-slate-200 dark:border-slate-800">
        <div class="flex items-center gap-3 mb-4">
            <i data-lucide="alert-circle" class="w-8 h-8 text-red-500"></i>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Something went wrong</h1>
        </div>
        <p class="text-slate-700 dark:text-slate-300 mb-6">An unexpected error occurred. If the problem persists, please contact support.</p>
        <div class="bg-slate-50 dark:bg-slate-800 p-4 rounded-lg border border-slate-200 dark:border-slate-700">
            <p class="text-sm text-slate-600 dark:text-slate-400">Correlation ID:</p>
            <code class="text-sm font-bold text-slate-800 dark:text-white">@traceId</code>
        </div>
        <div class="mt-6">
            <a href="@Url.Action("Index", "Home")" class="inline-flex items-center gap-2 text-purple-vibrant font-bold hover:text-purple-deep dark:hover:text-purple-100 transition-colors">
                <i data-lucide="home" class="w-5 h-5"></i> Return to Home
            </a>
        </div>
    </div>
</div>
