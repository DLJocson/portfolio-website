@{
    ViewData["Title"] = "Projects";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 animate-fade-in">
    <div class="text-center mb-16">
        <h2 class="text-purple-vibrant font-bold tracking-wide uppercase text-sm mb-2">Portfolio</h2>
        <h1 class="text-4xl font-black text-slate-900 dark:text-white">Recent Works</h1>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">

        <!-- Project 1 -->
        <button onclick="showProject(this)"
                data-title="E-Commerce Dashboard"
                data-desc="A comprehensive ASP.NET MVC admin panel designed for high-volume retail. Features include real-time inventory tracking, order management, and customer analytics dashboard."
                data-tech="ASP.NET MVC, Entity Framework Core, SQL Server, Chart.js, Bootstrap"
                class="text-left bg-white dark:bg-slate-900 rounded-2xl overflow-hidden shadow-lg border border-slate-200 dark:border-slate-800 hover:border-purple-vibrant/50 dark:hover:border-purple-vibrant/50 hover:shadow-2xl transition-all duration-300 group animate-slide-up">
            <div class="h-56 bg-slate-100 dark:bg-slate-800 relative flex items-center justify-center">
                <!-- Hover Pattern -->
                <div class="absolute inset-0 opacity-0 group-hover:opacity-10 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-purple-vibrant to-transparent transition-opacity duration-500"></div>
                <div class="text-center group-hover:scale-105 transition-transform duration-500 z-10">
                    <div class="w-16 h-16 bg-purple-100 dark:bg-slate-800 rounded-2xl flex items-center justify-center mx-auto mb-3 text-purple-vibrant shadow-sm border border-purple-200 dark:border-slate-700">
                        <i data-lucide="shopping-bag" class="w-8 h-8"></i>
                    </div>
                    <span class="text-2xl font-bold text-slate-800 dark:text-white">E-Comm</span>
                </div>
            </div>
            <div class="p-8 border-t border-slate-100 dark:border-slate-800 relative bg-white dark:bg-slate-900">
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-purple-vibrant transition-colors">E-Commerce Dashboard</h3>
                <p class="text-slate-600 dark:text-slate-400 text-sm mb-4 line-clamp-2">Full-featured MVC admin panel for managing products and orders.</p>
                <span class="text-purple-vibrant text-sm font-bold flex items-center gap-1 group-hover:gap-2 transition-all">View Details <i data-lucide="arrow-right" class="w-4 h-4"></i></span>
            </div>
        </button>

        <!-- Project 2 -->
        <button onclick="showProject(this)"
                data-title="TaskMaster Pro"
                data-desc="Real-time project management tool allowing teams to create boards, lists, and cards. Uses SignalR for instant updates across all connected clients."
                data-tech="C#, SignalR, Razor Pages, jQuery, AJAX"
                class="text-left bg-white dark:bg-slate-900 rounded-2xl overflow-hidden shadow-lg border border-slate-200 dark:border-slate-800 hover:border-purple-vibrant/50 hover:shadow-2xl transition-all duration-300 group animate-slide-up">
            <div class="h-56 bg-slate-100 dark:bg-slate-800 relative flex items-center justify-center">
                <div class="text-center group-hover:scale-105 transition-transform duration-500 z-10">
                    <div class="w-16 h-16 bg-emerald-50 dark:bg-slate-800 rounded-2xl flex items-center justify-center mx-auto mb-3 text-emerald-600 shadow-sm border border-emerald-200 dark:border-slate-700">
                        <i data-lucide="check-square" class="w-8 h-8"></i>
                    </div>
                    <span class="text-2xl font-bold text-slate-800 dark:text-white">TaskMaster</span>
                </div>
            </div>
            <div class="p-8 border-t border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-900">
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-purple-vibrant transition-colors">TaskMaster Pro</h3>
                <p class="text-slate-600 dark:text-slate-400 text-sm mb-4 line-clamp-2">Productivity application enabling teams to assign real-time tickets.</p>
                <span class="text-purple-vibrant text-sm font-bold flex items-center gap-1 group-hover:gap-2 transition-all">View Details <i data-lucide="arrow-right" class="w-4 h-4"></i></span>
            </div>
        </button>

        <!-- Project 3 -->
        <button onclick="showProject(this)"
                data-title="Finance Tracker"
                data-desc="Personal budgeting application with secure authentication. Users can track expenses, set budget limits, and visualize spending habits via interactive charts."
                data-tech=".NET Core, Identity, Chart.js, Web API"
                class="text-left bg-white dark:bg-slate-900 rounded-2xl overflow-hidden shadow-lg border border-slate-200 dark:border-slate-800 hover:border-purple-vibrant/50 hover:shadow-2xl transition-all duration-300 group animate-slide-up">
            <div class="h-56 bg-slate-100 dark:bg-slate-800 relative flex items-center justify-center">
                <div class="text-center group-hover:scale-105 transition-transform duration-500 z-10">
                    <div class="w-16 h-16 bg-orange-50 dark:bg-slate-800 rounded-2xl flex items-center justify-center mx-auto mb-3 text-orange-600 shadow-sm border border-orange-200 dark:border-slate-700">
                        <i data-lucide="pie-chart" class="w-8 h-8"></i>
                    </div>
                    <span class="text-2xl font-bold text-slate-800 dark:text-white">Finance</span>
                </div>
            </div>
            <div class="p-8 border-t border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-900">
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-purple-vibrant transition-colors">Finance Tracker</h3>
                <p class="text-slate-600 dark:text-slate-400 text-sm mb-4 line-clamp-2">Personal budgeting tool with interactive JS charts.</p>
                <span class="text-purple-vibrant text-sm font-bold flex items-center gap-1 group-hover:gap-2 transition-all">View Details <i data-lucide="arrow-right" class="w-4 h-4"></i></span>
            </div>
        </button>

        <!-- Project 4 (New) -->
        <button onclick="showProject(this)"
                data-title="AI Image Generator"
                data-desc="A wrapper application for OpenAI DALL-E API. Users can input prompts to generate unique images, save them to a gallery, and share them socially."
                data-tech=".NET 8, OpenAI API, React, Azure Blob Storage"
                class="text-left bg-white dark:bg-slate-900 rounded-2xl overflow-hidden shadow-lg border border-slate-200 dark:border-slate-800 hover:border-purple-vibrant/50 hover:shadow-2xl transition-all duration-300 group animate-slide-up">
            <div class="h-56 bg-slate-100 dark:bg-slate-800 relative flex items-center justify-center">
                <div class="text-center group-hover:scale-105 transition-transform duration-500 z-10">
                    <div class="w-16 h-16 bg-blue-50 dark:bg-slate-800 rounded-2xl flex items-center justify-center mx-auto mb-3 text-blue-600 shadow-sm border border-blue-200 dark:border-slate-700">
                        <i data-lucide="bot" class="w-8 h-8"></i>
                    </div>
                    <span class="text-2xl font-bold text-slate-800 dark:text-white">AI Gen</span>
                </div>
            </div>
            <div class="p-8 border-t border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-900">
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-purple-vibrant transition-colors">AI Image Generator</h3>
                <p class="text-slate-600 dark:text-slate-400 text-sm mb-4 line-clamp-2">Generates art using OpenAI API and .NET backend.</p>
                <span class="text-purple-vibrant text-sm font-bold flex items-center gap-1 group-hover:gap-2 transition-all">View Details <i data-lucide="arrow-right" class="w-4 h-4"></i></span>
            </div>
        </button>

    </div>
</div>