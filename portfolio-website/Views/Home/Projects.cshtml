@* === Projects.cshtml ===
   Purpose: Render project grid that feeds modal detail views via JS fetch. *@
@model List<PortfolioWebsite.Models.ProjectModel>
@{
    ViewData["Title"] = "Projects";
}

<div class="bg-purple-deep text-white py-24 relative overflow-hidden">
    <div class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-white dark:from-slate-950 to-transparent"></div>
    <div class="max-w-7xl mx-auto px-4 text-center relative z-10 animate-slide-up">
        <h1 class="text-4xl md:text-5xl font-black mb-4">My Portfolio</h1>
        <p class="text-xl text-purple-100 max-w-2xl mx-auto font-light">Recent projects and case studies</p>
    </div>
</div>

<div class="max-w-7xl mx-auto px-4 py-16 -mt-20 relative z-20">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        @foreach (var project in Model)
        {
            var delay = (Model.IndexOf(project) + 1) * 0.1;
            <button onclick="showProject('@project.Key')" class="text-left bg-white dark:bg-slate-900 rounded-2xl overflow-hidden shadow-lg border border-slate-200 dark:border-slate-800 hover:border-purple-vibrant/50 dark:hover:border-purple-vibrant/50 hover:shadow-2xl transition-all duration-300 group animate-slide-up" style="animation-delay: @(delay)s;">
                <div class="h-56 bg-slate-100 dark:bg-slate-800 relative overflow-hidden flex items-center justify-center">
                    <div class="absolute inset-0 opacity-10 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-@(project.ColorClass)-500 to-transparent"></div>
                    <div class="text-center z-10 group-hover:scale-105 transition-transform duration-500">
                        <div class="w-16 h-16 bg-@(project.ColorClass)-50 dark:bg-slate-800 rounded-2xl flex items-center justify-center mx-auto mb-3 text-@(project.ColorClass)-600 shadow-sm">
                            <i data-lucide="@project.Icon" class="w-8 h-8"></i>
                        </div>
                        <span class="text-2xl font-bold text-slate-800 dark:text-white">@project.Title.Split(' ')[0]</span>
                    </div>
                </div>
                <div class="p-8 border-t border-slate-100 dark:border-slate-800">
                    <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-3 group-hover:text-purple-vibrant transition-colors">@project.Title</h3>
                    <p class="text-slate-600 dark:text-slate-400 text-sm mb-6 leading-relaxed line-clamp-2">@project.Description</p>
                    <div class="flex flex-wrap gap-2 mb-6">
                        @foreach (var tech in project.Technologies.Take(2))
                        {
                            <span class="px-3 py-1 bg-@(project.ColorClass)-50 dark:bg-slate-800 text-@(project.ColorClass)-800 dark:text-@(project.ColorClass)-100 border border-@(project.ColorClass)-100 dark:border-slate-700 text-xs font-semibold rounded-md">@tech</span>
                        }
                    </div>
                    <span class="inline-flex items-center gap-2 text-purple-vibrant font-bold hover:gap-3 transition-all text-sm uppercase tracking-wide">
                        View Details <i data-lucide="arrow-right" class="w-4 h-4"></i>
                    </span>
                </div>
            </button>
        }

    </div>
</div>