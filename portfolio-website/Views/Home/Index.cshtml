@{
    ViewData["Title"] = "Home";
}

<div class="animate-fade-in">
    <div class="relative">
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-purple-100/50 dark:bg-purple-900/20 rounded-full blur-3xl -z-10 -translate-y-20 translate-x-20"></div>
        <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-slate-100/50 dark:bg-slate-800/20 rounded-full blur-3xl -z-10 translate-y-20 -translate-x-20"></div>

        <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32 flex flex-col-reverse lg:flex-row items-center gap-16">
            <div class="flex-1 text-center lg:text-left space-y-8">
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-purple-50 dark:bg-purple-900/30 border border-purple-100 dark:border-purple-800 text-purple-deep dark:text-purple-100 font-medium text-sm tracking-wide animate-slide-up">
                    <span class="w-2 h-2 rounded-full bg-purple-vibrant animate-pulse"></span>
                    Available for new opportunities
                </div>
                
                <h1 class="text-5xl lg:text-7xl font-black text-purple-deep dark:text-white tracking-tight leading-tight animate-slide-up" style="animation-delay: 100ms;">
                    Building <span class="text-purple-vibrant">maintainable</span> <br/>
                    systems with clarity
                </h1>
                
                <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto lg:mx-0 animate-slide-up leading-relaxed font-light" style="animation-delay: 200ms;">
                    I am a college student at the Polytechnic University of the Philippines, currently pursuing a degree in Computer Science. My journey in tech started with a simple fascination with computers, and it grew into a passion for creating systems that are clear, maintainable, and user-friendly.
                </p>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start pt-4 animate-slide-up" style="animation-delay: 300ms;">
                    <button onclick="initiateDownload()" class="px-8 py-4 bg-purple-vibrant text-white rounded-lg font-bold hover:bg-purple-deep transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1 flex items-center justify-center gap-2">
                        <i data-lucide="download" class="w-5 h-5"></i> Download Resume
                    </button>
                    <a href="@Url.Action("Projects", "Home")" class="px-8 py-4 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-200 border border-slate-300 dark:border-slate-600 rounded-lg font-bold hover:border-purple-vibrant hover:text-purple-vibrant dark:hover:border-purple-vibrant dark:hover:text-purple-vibrant transition-all duration-300 hover:-translate-y-1 text-center">
                        View Projects
                    </a>
                </div>
            </div>
            
            <div class="flex-1 flex justify-center animate-slide-up" style="animation-delay: 400ms;">
                <div class="relative w-72 h-72 lg:w-96 lg:h-96 group">
                    <div class="absolute inset-0 bg-purple-vibrant rounded-3xl rotate-6 opacity-20 dark:opacity-30 group-hover:rotate-12 transition-transform duration-500"></div>
                    <div class="absolute inset-0 bg-white dark:bg-slate-800 rounded-3xl shadow-2xl overflow-hidden border border-slate-200 dark:border-slate-700 transition-transform duration-500 hover:scale-[1.02]">
                        <img src="/images/profile.jpg" alt="Profile" class="w-full h-full object-cover">
                    </div>
                </div>
            </div>
        </section>

        <!-- Core Technologies -->
        <section class="border-y border-slate-200 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-900/50 backdrop-blur-sm">
            <div class="max-w-7xl mx-auto px-4 py-12">
                <p class="text-center text-sm font-bold text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-8">Core Technologies & Expertise</p>
                <div class="flex flex-wrap justify-center gap-8 md:gap-16">
                    
                    <button onclick="showTechInfo('python')" class="flex flex-col items-center gap-3 text-slate-400 dark:text-slate-500 hover:text-purple-vibrant transition-colors group">
                        <i data-lucide="code" class="w-10 h-10 group-hover:scale-110 transition-transform"></i> 
                        <span class="font-bold">Python</span>
                    </button>
                    
                    <button onclick="showTechInfo('csharp')" class="flex flex-col items-center gap-3 text-slate-400 dark:text-slate-500 hover:text-purple-vibrant transition-colors group">
                        <i data-lucide="code-2" class="w-10 h-10 group-hover:scale-110 transition-transform"></i> 
                        <span class="font-bold">C#</span>
                    </button>
                    
                    <button onclick="showTechInfo('javascript')" class="flex flex-col items-center gap-3 text-slate-400 dark:text-slate-500 hover:text-purple-vibrant transition-colors group">
                        <i data-lucide="braces" class="w-10 h-10 group-hover:scale-110 transition-transform"></i> 
                        <span class="font-bold">JavaScript</span>
                    </button>
                    
                    <button onclick="showTechInfo('htmlcss')" class="flex flex-col items-center gap-3 text-slate-400 dark:text-slate-500 hover:text-purple-vibrant transition-colors group">
                        <i data-lucide="layout-grid" class="w-10 h-10 group-hover:scale-110 transition-transform"></i> 
                        <span class="font-bold">HTML & CSS</span>
                    </button>

                    <button onclick="showTechInfo('figma')" class="flex flex-col items-center gap-3 text-slate-400 dark:text-slate-500 hover:text-purple-vibrant transition-colors group">
                        <i data-lucide="palette" class="w-10 h-10 group-hover:scale-110 transition-transform"></i> 
                        <span class="font-bold">Figma</span>
                    </button>

                </div>
            </div>
        </section>
    </div>
</div>